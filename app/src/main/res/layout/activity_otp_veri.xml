<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpVeriActivity">
    <com.hbb20.CountryCodePicker
        android:id="@+id/countypicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/enter_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/countypicker"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="49dp"


        android:ems="10"
        android:hint="Enter Phone Number"
        android:inputType="phone" />

    <Button
        android:id="@+id/get_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Get Otp" />

    <EditText
        android:id="@+id/enter_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/get_otp"
        android:layout_marginTop="50dp"
        android:inputType="number"
        android:hint="Enter Otp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/veritfy_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_otp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"

        android:text="Verify Otp" />

</RelativeLayout>