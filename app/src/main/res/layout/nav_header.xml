<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <ImageView
        android:id="@+id/profileBackImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cat" />


    <androidx.cardview.widget.CardView
        android:id="@+id/circuler_image_cardview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="10dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileBackImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileBackImage"
        app:layout_constraintVertical_bias="1.0">


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cat" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/circulerbuttoncard"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:elevation="10dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal|bottom"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/profileBackImage"
        app:layout_constraintEnd_toEndOf="@+id/profileBackImage"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toStartOf="@+id/profileBackImage"
        app:layout_constraintTop_toTopOf="@+id/profileBackImage"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/baseline_add_white_24dp">
        <Button
            android:id="@+id/setProfileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="#2DB3A6"

            app:srcCompat="@drawable/baseline_add_white_24dp" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="1dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileBackImage" />

    <EditText
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="About"
        android:inputType="textPersonName"
        android:minHeight="48dp"

        android:padding="1dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/circulerbuttoncar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:elevation="10dp"
        android:gravity="center_horizontal|bottom"
        app:cardCornerRadius="100dp"

        app:layout_constraintBottom_toBottomOf="@+id/profileBackImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintStart_toStartOf="@+id/profileBackImage"
        app:layout_constraintTop_toTopOf="@+id/profileBackImage"
        app:layout_constraintVertical_bias="1.0">
        <Button
            android:id="@+id/setProfileBackImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2DB3A6"
            android:scaleType="fitXY"

            app:srcCompat="@drawable/baseline_add_white_24dp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>