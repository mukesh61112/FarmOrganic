<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bisque"

    tools:context=".EmailLoginActivity">

    <ImageView
        android:id="@+id/gogreen"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@drawable/gogreen" />


    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gogreen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:ems="10"
        android:hint=" email"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="5dp" />


    <EditText
        android:id="@+id/enterPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="password"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="5dp" />


    <TextView
        android:id="@+id/forRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterPassword"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/signIn"
        android:text="Click For Register " />

    <Button
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_below="@+id/forRegister"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/AntiqueWhite"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Sign in" />

    <Button
        android:id="@+id/google"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signIn"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/AntiqueWhite"
        android:drawableLeft="@drawable/google"
        android:padding="5dp"
        android:text="@string/google"
        android:textColor="@color/Black"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signIn"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/google"
        android:backgroundTint="@color/AntiqueWhite"
        android:drawableLeft="@drawable/phone"
        android:padding="5dp"
        android:text="@string/phone"
        android:textColor="@color/Black"
        app:cornerRadius="5dp" />
</RelativeLayout>