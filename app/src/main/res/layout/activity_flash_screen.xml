<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1F0A5"

    tools:context=".FlashScreenActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/foodAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

        app:lottie_rawRes="@raw/food"
        app:lottie_url="REPLACE_JSON_URL" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ecoAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

        app:lottie_rawRes="@raw/ecofriend"
        android:layout_below="@+id/foodAnimation"
        app:lottie_url="REPLACE_JSON_URL" />

</RelativeLayout>